min.mean.sd.max <- function(x) {
  r <- c(min(x), mean(x) - sd(x), mean(x), mean(x) + sd(x), max(x))
  names(r) <- c("ymin", "lower", "middle", "upper", "ymax")
  r
}

df$Farve <- ordered(df$Farve, levels=c("Kontrol", "grøn", "gul", "rød"))
